{
  "name": "armitage-api",
  "description": "armitage-api",
  "version": "1.0.0",
  "author": "Michal Vlasak",
  "engines": {
    "node": "^12.18.2"
  },
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "src/config/"
  },
  "types": "lib/",
  "scripts": {
    "build": "tsc",
    "start": "node -r source-map-support/register dist/index.js",
    "start:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "docs": "exit 0",
    "start-lr": "tsc-watch --onSuccess \"npm run start\"",
    "test": "jest --colors --detectOpenHandles --forceExit --runInBand",
    "test-lr": "npm run test -- --watch",
    "cover": "npm run test -- --collectCoverage",
    "ci-test": "npm run cover -- --reporters=default --reporters=jest-junit --ci",
    "ci-lint": "npm run lint -- -f checkstyle -o ./output/checkstyle-result.xml",
    "lint": "npm run cs:eslint:check",
    "cs:prettier:check": "prettier --check '**/*.{ts,js,json,md}'",
    "cs:prettier:fix": "npm run cs:prettier:check -- --write '**/*.{ts,js,json,md}'",
    "cs:eslint:check": "eslint '**/*.ts' -f codeframe",
    "cs:eslint:fix": "npm run cs:eslint:check -- --fix",
    "cs:eclint:check": "eclint check '**/*'",
    "cs:eclint:fix": "eclint fix '**/*'",
    "check": "npm-check -i app -i errors -i config -i index; exit 0",
    "migrate:latest": "knex migrate:latest"
  },
  "jest-junit": {
    "outputDirectory": "output",
    "outputName": "./test.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " > ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@ackee/styleguide-backend-config": "^0.1.2",
    "@feathersjs/authentication": "^4.5.11",
    "@feathersjs/authentication-oauth": "^4.5.11",
    "@feathersjs/configuration": "^4.5.11",
    "@feathersjs/express": "^4.5.11",
    "@feathersjs/feathers": "^4.5.11",
    "@feathersjs/transport-commons": "^4.5.11",
    "compression": "^1.7.4",
    "configuru": "^0.5.0",
    "cors": "^2.8.5",
    "cosmas": "^2.0.0-beta.6",
    "feathers-debugger-service": "^1.3.6",
    "feathers-hooks-common": "^5.0.5",
    "feathers-knex": "^7.1.1",
    "feathers-memory": "^4.1.0",
    "knex": "^0.21.17",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "node-healthz": "^1.0.1",
    "npm-run-series": "^1.0.1",
    "pg": "^8.5.1",
    "source-map-support": "^0.5.19",
    "unicore": "^0.4.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/knex-cleaner": "^1.3.0",
    "@types/lodash": "^4.14.153",
    "@types/node": "^12.12.42",
    "@types/supertest-as-promised": "^2.0.38",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eclint": "^2.8.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "jest-junit": "^10.0.0",
    "knex-cleaner": "^1.3.1",
    "lint-staged": "^10.2.6",
    "nodemon": "^2.0.7",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.5",
    "prettier-config-ackee": "0.0.13",
    "supertest": "^4.0.2",
    "supertest-as-promised": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.8",
    "typescript": "^3.9.3"
  }
}
